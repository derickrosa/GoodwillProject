<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Applicant</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Request date</th>
      <th>Status</th>
      <th>Volunteers number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.applicant_id %></td>
        <td><%= request.title %></td>
        <td><%= request.description %></td>
        <td><%= request.category_id %></td>
        <td><%= request.request_date %></td>
        <td><%= request.status %></td>
        <td><%= request.volunteers_number %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

