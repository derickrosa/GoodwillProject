<h1>Listing applications</h1>

<table>
  <thead>
    <tr>
      <th>Applicant</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Request date</th>
      <th>Status</th>
      <th>Volunteers number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.applicant_id %></td>
        <td><%= application.title %></td>
        <td><%= application.description %></td>
        <td><%= application.category_id %></td>
        <td><%= application.request_date %></td>
        <td><%= application.status %></td>
        <td><%= application.volunteers_number %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

